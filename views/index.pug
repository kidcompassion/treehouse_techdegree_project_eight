extends layout

block content


  include error

  h1 All Books
  
  form#searchForm(method='POST' action='/books/search/results')
    label(for="search") Search
    br
    input#searchField(type="search", name="search")
    input(type="submit", value="search")
  br
  p
    a.button(href='/books/new') Create New Book

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in allBooks
        tr
          td 
            a(href='/books/'+ book.id) #{book.title}
          td= book.author
          td= book.genre
          td= book.year


  - var page = 0;
  ul#pagination
    while page <totalPages
      li
        a(href='/books/page/'+page) #{page+1}
      -page++
      
    
        